{
  "name": "kipubankv2",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage --testfiles \"test/**/*.ts\"",
    "gas": "cross-env REPORT_GAS=true hardhat test",
    "deploy:sepolia": "hardhat run script/deploy.ts --network sepolia",
    "interact:sepolia": "hardhat run script/interact.ts --network sepolia",
    "verify:sepolia": "hardhat run script/verify.ts --network sepolia",
    "lint:sol": "npx solhint 'src/**/*.sol'",
    "format": "npx prettier -w \"{src,script,test}/**/*.{sol,ts,js,md,json}\""
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.0",
    "chai": "^4.3.10",
    "dotenv": "^16.4.5",
    "ethers": "^6.10.0",
    "hardhat": "^2.22.5",
    "hardhat-gas-reporter": "^1.0.10",
    "cross-env": "^7.0.3",
    "mocha": "^10.2.0",
    "prettier": "^3.3.3",
    "solhint": "^4.5.3",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2"
  }
}
